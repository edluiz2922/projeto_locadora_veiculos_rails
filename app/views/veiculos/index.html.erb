<div class="page-header">
  <%= link_to new_veiculo_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Veiculo
  <% end %>
  <h1>Listindo veiculos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Cor</th>
            <th>Qtde passageiro</th>
            <th>Placa</th>
            <th>Valor</th>
            <th>Marca</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @veiculos) do |veiculo| %>
            <td><%= veiculo.nome %></td>
            <td><%= veiculo.cor %></td>
            <td><%= veiculo.qtde_passageiro %></td>
            <td><%= veiculo.placa %></td>
            <td><%= veiculo.valor %></td>
            <td><%= veiculo.marca.nome %></td>
            <td><%= link_to 'Exibir', veiculo %></td>
        <td><%= link_to 'Editar', edit_veiculo_path(veiculo) %></td>
        <td><%= link_to 'Apagar', veiculo, method: :delete, data: { confirm: 'VocÃª tem coragem?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
